<%= form_with model: place, local: true do |f|%>
  <div class="field">
    <%= f.label :title, "名称" %><br />
    <%= f.text_field :title, id:"place_title" %>
  </div>

  <div class="field">
    <%= f.label :concept, "案内" %><br />
    <%= f.text_area :concept, class: :form__text, id:"place_concept" %>
  </div>

  <div class="field">
    <%= f.label :image, "画像" %><br />
    <%= f.file_field :image, id:"place_image" %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>